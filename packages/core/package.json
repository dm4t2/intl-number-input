{
  "name": "@intl-number-input/core",
  "description": "Easy input of formatted numbers based on the ECMAScript Internationalization API (ECMA-402).",
  "version": "0.1.0",
  "license": "MIT",
  "module": "./dist/index.esm.js",
  "main": "./dist/index.cjs.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/index.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "sideeffects": false,
  "author": "Matthias Stiller",
  "repository": {
    "type": "git",
    "url": "https://github.com/dm4t2/intl-number-input.git"
  },
  "homepage": "https://dm4t2.github.io/intl-number-input",
  "keywords": [
    "input mask",
    "number format",
    "ECMA-402"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint",
    "build": "tsc --emitDeclarationOnly --declaration --outDir types && rollup -c rollup.config.js",
    "release": "semantic-release -e semantic-release-monorepo"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.0",
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^18.0.0",
    "semantic-release-monorepo": "^7.0.5",
    "ts-jest": "^26.5.6",
    "typescript": "^4.4.4"
  }
}
